<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.SignUp1Fragment">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="電話"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="50dp"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/tv_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身分"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="50dp"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/tv_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="葷/素"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="50dp"
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/et_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="140dp"
        android:text=""
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="140dp"
        android:text=""
        android:textSize="30dp"/>


    <Button
        android:id="@+id/btn_next1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="139dp"
        android:text="下一步"
        android:textSize="30dp"/>

    <RadioGroup
        android:id="@+id/rg_model"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="297dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_elder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="長者"
            android:textSize="30dp"/>

        <RadioButton
            android:id="@+id/rb_volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="志工"
            android:textSize="30dp"/>
    </RadioGroup>
    <RadioGroup
        android:id="@+id/rg_food"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="397dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_meat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="葷    "
            android:textSize="30dp"/>

        <RadioButton
            android:id="@+id/rb_vagetable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="素"
            android:textSize="30dp"/>
    </RadioGroup>

</FrameLayout>




