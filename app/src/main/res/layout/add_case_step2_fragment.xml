<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_case_step1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    tools:context=".elder.addCase.AddCaseStep2Fragment">

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:text="甚麼時候去？"
        android:textColor="@color/black"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_select_date"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:autoSizeTextType="none"
        android:autoText="false"
        android:backgroundTint="#FFFFFF"
        android:elevation="30dp"
        android:text="選擇日期"
        android:textColor="@color/black"
        android:textSize="36dp"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2" />

    <Button
        android:id="@+id/btn_today"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:autoSizeTextType="none"
        android:autoText="false"
        android:backgroundTint="#FFFFFF"
        android:elevation="30dp"
        android:text="今天"
        android:textColor="@color/black"
        android:textSize="36dp"
        android:translationZ="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_select_date" />

    <Button
        android:id="@+id/btn_now"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="24dp"
        android:autoSizeTextType="none"
        android:autoText="false"
        android:backgroundTint="#FFFFFF"
        android:elevation="30dp"
        android:shadowColor="#575757"
        android:text="現在"
        android:textColor="@color/black"
        android:textSize="36dp"
        android:translationZ="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_today" />
</androidx.constraintlayout.widget.ConstraintLayout>