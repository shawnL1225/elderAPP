<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/img_headshot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/male_nobg" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="John Doe"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/img_headshot"
        app:layout_constraintTop_toTopOf="@+id/img_headshot" />

    <TextView
        android:id="@+id/txt_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="市場"
        android:textColor="@color/brown_dark"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/txt_name"
        app:layout_constraintTop_toTopOf="@+id/txt_name" />

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0900123456"
        android:textColor="@color/gray_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_headshot"
        app:layout_constraintStart_toEndOf="@+id/img_headshot"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7/18 16:00"
        android:textColor="@color/gray_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_headshot"
        app:layout_constraintEnd_toEndOf="@+id/txt_status"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="@+id/txt_status"
        app:layout_constraintTop_toBottomOf="@+id/txt_status"
        app:layout_constraintVertical_bias="0.263" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="84dp"
        android:layout_height="26dp"
        android:background="@drawable/style_radius_block"
        android:backgroundTint="@color/gray_dark"
        android:gravity="center"
        android:text="接受"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_place"
        app:layout_constraintTop_toTopOf="@+id/txt_place" />
</androidx.constraintlayout.widget.ConstraintLayout>